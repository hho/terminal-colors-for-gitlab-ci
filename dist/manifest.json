{
  "manifest_version": 2,
  "name": "Terminal Colors for GitLab CI",
  "version": "1.1.0",
  "description": "Provides terminal colors for GitLab CI raw build logs",
  "icons": {
    "32": "img/icon32.png",
    "64": "img/icon64.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "optional_permissions": [
    "http://*/", "https://*/"
  ],
  "page_action": {},
  "web_accessible_resources": [
    "css/terminal-colors.css"
  ]
}
